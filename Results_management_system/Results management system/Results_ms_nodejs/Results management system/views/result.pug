doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Result Management System
  style.
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    }
    header {
    background-color: #333;
    color: #fff;
    padding: 10px;
    text-align: center;
    }
    nav {
    background-color: #555;
    padding: 10px;
    text-align: center;
    }
    nav a {
    color: #fff;
    text-decoration: none;
    padding: 10px;
    margin: 0 10px;
    }
    section {
    padding: 20px;
    }
    footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 10px;
    position: fixed;
    bottom: 0;
    width: 100%;
    }
    table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    }
    th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
    }
    th {
    background-color: #555;
    color: #fff;
    }
